<Window x:Class="Nikoban.DefeatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nikoban"
        mc:Ignorable="d"
        Title="Defeat!" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="288*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images/stuckmenu/defeat.png"/>
        </Grid.Background>
        <Button Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="10" Content="OK" FontSize="30" Click="Button_Click" Margin="0,1,0,0"/>
    </Grid>
</Window>
