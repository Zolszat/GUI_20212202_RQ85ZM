<Window x:Class="Nikoban.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nikoban"
        xmlns:l="clr-namespace:Nikoban.Logic"
        mc:Ignorable="d"
        Title="ScoreWindow" Height="352" Width="347">
    <Window.DataContext>
        <l:GameLogic/>
    </Window.DataContext>
    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2FA9BA"/>
                <GradientStop Color="#FF16FFC8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="Your score is:" Margin="0,0,0,282" Background="{x:Null}"></Label>
        <Label FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content=""  Background="{x:Null}"></Label>
        
        <TextBox Text="" Margin="0,197,0,97" >
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </TextBox.Background>
        </TextBox>
    </Grid>
</Window>
